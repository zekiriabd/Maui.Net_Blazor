<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PopUp.MyAlert">
    
        <VerticalStackLayout Style="{StaticResource PopupLayout}">
            <Label Style="{StaticResource Title}" Text="Simple Popup" />
            <BoxView Style="{StaticResource Divider}" />
            <Label Style="{StaticResource Content}" Text="This is a very important message!" />
        <Entry Text="{Binding Response}" />
        <Button x:Name="btnYes" Clicked="BtnYes_Clicked" Text="Yes"/>
        <Button x:Name="btnNo" Clicked="BtnNo_Clicked" Text="No"/>
    </VerticalStackLayout>
    
</toolkit:Popup>